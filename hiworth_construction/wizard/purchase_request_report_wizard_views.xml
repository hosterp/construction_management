		<!-- Material request report -->
		<template id="report_purchase_request_view">
			<t t-call="report.html_container">
				<t t-call="report.external_layout">
					<div class="page">
						<!-- <t t-foreach="docs" t-as="o"> -->
						<div class="row">
							<h2 align="center">
                                <span>Pending Purchase Request Report </span>
							</h2>
							<p align="center">
								From
								<t
									t-esc="time.strftime('%d-%m-%Y',time.strptime(docs.date_from,'%Y-%m-%d'))"></t>
								To
								<t
									t-esc="time.strftime('%d-%m-%Y',time.strptime(docs.date_to,'%Y-%m-%d'))"></t>
							</p>
						</div>
						<div class="row">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th style="width: 5%">Sl.No</th>
										<th>Date</th>
										<th>Department</th>
										<th>Order By</th>
										<th>mode of Order</th>
										<th>PR No</th>
										<th>RFQ No</th>
										<th>Comparison No</th>

                                        <th>Supplier</th>
                                        <th>Location</th>
                                        <th>Product</th>

                                        <th>P.O Quantity</th>


                                        <th>Product Unit of Measure</th>
                                        <th>Ordered Rate</th>
										  <th>Status</th>

									</tr>
								</thead>
								<t t-set="sl_no" t-value="1" />
								<t t-set="total" t-value="0" />
								<tbody>
									<t t-foreach="docs.get_products()" t-as="product">

										<tr >


										<td>
											<t t-esc="sl_no" />

										</td>
										<td>
											<t t-esc="product[sl_no]['date']" />
										</td>
											<td>
											<t t-esc="product[sl_no]['department']" />
										</td>
											<td>
											<t t-esc="product[sl_no]['order_by']" />
										</td>
											<td>
											<t t-esc="product[sl_no]['mode_order']" />
										</td>
										<td>
											<t t-esc="product[sl_no]['pr']" />
										</td>
										<td>
											<t t-esc="product[sl_no]['rfq']" />
										</td>

										<td>
											<t t-esc="product[sl_no]['comp']" />
										</td>

										<td>
											<t t-esc="product[sl_no]['supplier']" />
										</td>
										<td>
											<t t-esc="product[sl_no]['location']" />
										</td>
										<td>
											<t t-esc="product[sl_no]['product']" />
										</td>


										<td class="text-right">
											<t t-esc="product[sl_no]['ordered_qty']" />
										</td>


										<td class="text-right">

											<t t-esc="product[sl_no]['uom']" />

										</td>
                                        <td>
											<t t-esc="product[sl_no]['ordered_rate']" />
										</td>

											  <td>
											<t t-esc="product[sl_no]['status']" />

										</td>
										<t t-set="sl_no" t-value="sl_no+1" />
									</tr>

									</t>
									<tr>
										<th class="text-left">Grand Total</th>






										<th class="text-right">
										</th>
										<th class="text-right">
										</th>
										<th class="text-right">
										</th>
										<th class="text-right">
										</th>
										<th class="text-right">
										</th>
										<th class="text-right">
										</th>
										<th class="text-right">
										</th>
										<th class="text-right">
											<t t-esc="total" />
										</th>
										<th class="text-right">
										</th>
										<th class="text-right">

										</th>
										<th class="text-right">

										</th>
									</tr>

								</tbody>

							</table>
						</div>

						<!-- </t> -->
					</div>
				</t>
			</t>
		</template>



