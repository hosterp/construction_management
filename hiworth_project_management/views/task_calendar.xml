		<menuitem name="Task Type Configuration" id="event.event_configuration" parent="menu_office_management" sequence="700"/>
        <menuitem name="Type of Task" id="event.menu_event_type" action="event.action_event_type" parent="event.event_configuration" groups="base.group_no_one"/>


          



        <record model="ir.ui.menu" id="base.marketing_menu">
			<field name="groups_id" eval="[(6,0,[ref('hiworth_project_management.make_invisible')])]" />
